{
  "name": "@pixijs/layout",
  "version": "0.1.0",
  "description": "It is a library a library for arranging pixi elements and make the arrangement basing on their size",
  "homepage": "https://github.com/pixijs/layout",
  "bugs": "https://github.com/pixijs/layout/issues",
  "license": "MIT",
  "author": "Goodboy Digital",
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:tsc",
    "build:tsc": "tsc -p tsconfig.build.json",
    "clean": "rimraf \"{dist,lib,types}\"",
    "predocs": "rimraf docs && mkdirp docs",
    "docs": "typedoc && npm run build:storybook",
    "docs:serve": "http-server ./docs/",
    "docs:media": "copyfiles -u 1 \"docs-source/media/**\" docs/assets/",
    "lint": "eslint --ext .js --ext .ts src --ignore-path .gitignore --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "start": "run-p watch:tsc watch:index",
    "test": "npx jest --silent --verbose",
    "test:debug": "cross-env DEBUG_MODE=1 npx jest",
    "preversion": "npm run clean && npm run lint",
    "postversion": "run-s build:tsc",
    "watch:all": "npm run clean && run-p watch:tsc",
    "watch:tsc": "tsc -p tsconfig.build.json -w",
    "watch:docs": "run-p docs:serve watch:docs:media watch:docs:pages",
    "watch:docs:pages": "chokidar \"docs-source/**/*\" -c \"npm run docs\"",
    "watch:docs:media": "nodemon --watch \"./*\" --exec \"npm run docs:media\"",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build --output-dir docs/storybook",
    "format": "prettier --write \"**/*.{js,json,ts,tsx,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixijs/ui.git"
  },
  "dependencies": {
    "@storybook/addon-storysource": "^6.5.14",
    "chokidar-cli": "^3.0.0",
    "detect-gpu": "^4.0.49",
    "pixi.js": ">= 6.x",
    "prettier": "^2.8.1",
    "typed-signals": "^2.5.0",
    "ua-parser-js": "^1.0.32"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@goodboydigital/eslint-config": "^2.1.0",
    "@pixi/storybook-renderer": "^0.0.2",
    "@pixi/storybook-webpack5": "^0.0.2",
    "@play-co/odie": "^13.0.1",
    "@play-co/typedoc-plugin-timestep": "^0.0.3",
    "@storybook/addon-essentials": "7.0.0-alpha.48",
    "@storybook/addon-interactions": "7.0.0-alpha.48",
    "@storybook/addon-links": "7.0.0-alpha.48",
    "@storybook/testing-library": "^0.0.13",
    "@types/babel__core": "^7.1.20",
    "@types/jest": "^29.2.3",
    "@types/node": "^16.11.11",
    "@types/signals": "1.0.1",
    "@types/ua-parser-js": "^0.7.36",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-transform-import-meta": "^2.1.0",
    "chokidar": "^3.5.3",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.3.0",
    "http-server": "^14.1.1",
    "jest": "^26.6.3",
    "jest-raw-loader": "^1.0.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "storybook": "7.0.0-alpha.48",
    "ts-jest": "^26.5.6",
    "typedoc": "~0.21.0",
    "typescript": "~4.4.0"
  },
  "overrides": {
    "enhanced-resolve@5.11.0": "5.10.0"
  },
  "peerDependencies": {
    "@play-co/odie": ">= 13.x",
    "pixi.js": ">= 6.x"
  },
  "publishConfig": {
    "access": "public"
  }
}
